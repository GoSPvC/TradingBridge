<UserControl x:Class="TradingBridge.UI.WPF.Pages.Home.HomeView"
             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:local="clr-namespace:TradingBridge.UI.WPF.Pages.Home"
             d:DataContext="{d:DesignInstance Type=local:HomeViewModel}"
             
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Message -->
        <TextBlock Grid.Row="0"
           Text="{Binding WelcomeMessage}"
           FontSize="32"
           FontWeight="Bold"
           Foreground="#2C3E50"
           HorizontalAlignment="Center"
           Margin="0,0,0,10"/>

        <!-- Current Date Time -->
        <TextBlock Grid.Row="1"
           Text="{Binding CurrentDateTime}"
           FontSize="18"
           Foreground="#7F8C8D"
           HorizontalAlignment="Center"
           Margin="0,0,0,20"/>

    </Grid>

</UserControl>
