<UserControl x:Class="TradingBridge.UI.WPF.Pages.NamedPipeServer.NamedPipeServerView"
             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:local="clr-namespace:TradingBridge.UI.WPF.Pages.NamedPipeServer"
             d:DataContext="{d:DesignInstance Type=local:NamedPipeServerViewModel}"
             
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Named Pipe Server"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Server Controls -->
        <Border Grid.Row="1"
                Background="#ECF0F1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <Ellipse Width="16" Height="16" Margin="0,0,10,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#E74C3C"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsServerRunning}" Value="True">
                                        <Setter Property="Fill" Value="#27AE60"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock VerticalAlignment="Center" FontWeight="SemiBold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Server Stopped"/>
                                <Setter Property="Foreground" Value="#E74C3C"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsServerRunning}" Value="True">
                                        <Setter Property="Text" Value="Server Running"/>
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Pipe Name -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Pipe Name: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding PipeName}" VerticalAlignment="Center" Foreground="#7F8C8D"/>
                </StackPanel>

                <!-- Start/Stop Button -->
                <Button Grid.Column="2"
                        Command="{Binding ToggleServerCommand}"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="â–¶ Start Server"/>
                            <Setter Property="Background" Value="#27AE60"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsServerRunning}" Value="True">
                                    <Setter Property="Content" Value="â¸ Stop Server"/>
                                    <Setter Property="Background" Value="#E74C3C"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Clear Log Button -->
                <Button Grid.Column="3"
                        Command="{Binding ClearLogCommand}"
                        Content="ðŸ—‘ Clear Log"
                        Padding="15,10"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Connected Clients -->
        <Border Grid.Row="2"
                Background="#ECF0F1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Connected Clients"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <ItemsControl ItemsSource="{Binding ConnectedClients}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="â—"
                                               Foreground="#27AE60"
                                               FontSize="16"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding ClientName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Platform}" Foreground="#7F8C8D" FontSize="12"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding ConnectedSince, StringFormat='Connected: {0:HH:mm:ss}'}"
                                               Foreground="#7F8C8D"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="No clients connected"
                           Foreground="#95A5A6"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ConnectedClients.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Message Log -->
        <Border Grid.Row="3"
                Background="#ECF0F1"
                CornerRadius="8"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Message Log"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Background="White"
                              Padding="10">
                    <ItemsControl ItemsSource="{Binding MessageLog}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Margin="0,0,0,3"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Send Message Section -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding MessageToSend, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Background="White"
                             BorderBrush="#BDC3C7"
                             BorderThickness="1"
                             Margin="0,0,10,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Column="1"
                            Command="{Binding SendMessageCommand}"
                            Content="ðŸ“¤ Send"
                            Padding="20,10"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
